extends ../../templates/head
include ../../components/ui-logo/ui-logo
include ../../components/header/header
include ../../components/footer/footer

block title
  title= "Headers & Footers"
block styles
  link(rel="stylesheet", href="css/ui.css")

block content
  - const data = require('../../data/eng.json');

  body(class="ui-page ui-page_bg_gray")
    .ui-page__header
      +ui-logo()
    section.ui-page__section
      +header({menuItems: data.header.menuItems, buttons:data.header.buttons})
    section.ui-page__section
      +header({menuItems: data.header.menuItems, buttons:data.header.buttons, login: true})
    section.ui-page__section
      +footer(data.footer)

