extends ./layout/head
include ../components/ui-logo/ui-logo
include ../components/ui-palette/ui-palette
include ../components/ui-typeface/ui-typeface


block headOptions
  - var pageTitle = "Colors & type"
  - var cssLink = "css/ui.css"

block content
  body(class="ui-page")
    .ui-page__wrapper
      +ui-logo
      section.ui-page__section
        .ui-page__box
          +ui-palette
        .ui-page__box.ui-page__box_right
          +ui-typeface