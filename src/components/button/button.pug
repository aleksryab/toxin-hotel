//-
  options.iverted - инвертированаая тема (boolean)
  options.type - тип кнопки (string)


mixin button(options= {})
  -
    var classes = 'button'
    classes += options.inverted ? ' button_inverted' : ''
    classes += options.type ? ' button_' + options.type : ''

  if options.type == 'submit'
    button(class= classes)= options.name
      i.button__icon.material-icons arrow_forward
  else
    button(class= classes)= options.name



