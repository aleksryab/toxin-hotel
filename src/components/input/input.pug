//-
  options.type - type (string), default - 'text'
  options.name - name (string)
  options.label - label (string)
  options.required - required (boolean)
  options.placeholder - placeholder (string)
  options.date - добавить классы и паттерн для даты (boolean)
  options.more - добавить только кнопку для выпадающего контента (boolean)
  options.dropdown - добавить кнопку, классы и атрибуты для dropdown (boolean)

mixin input(options = {})
  -
    let classes = 'input__field';
    classes += options.date ? ' js-date' : '';
    let pattern = options.date ? '[0-9]{2}\.[0-9]{2}\.[0-9]{4}' : false;
    let type = options.type ? options.type : 'text';

  div.input
    if options.label
      label.input__label= options.label
        div.input__inner
          input(
                class = classes,
                type = type,
                name = options.name,
                placeholder = options.placeholder,
                required = options.required,
                pattern = pattern,
                readonly = options.dropdown,
                value = options.value
              )
          if options.more || options.dropdown
            span.input__button
             i.material-icons expand_more
    else
      input(
            class = classes,
            type = type,
            name = options.name,
            placeholder = options.placeholder,
            required = options.required,
            pattern = pattern,
            value = options.value
          )
      if options.more || options.dropdown
            span.input__button
             i.material-icons expand_more

