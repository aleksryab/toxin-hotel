//-
    options.title - заголовок списка (string)
    options.expanded - раскрытое отображение (boolean)
    options.items - (array)
      options.items[0].label - label (string)
      options.items[0].name - name, attr of input (string)
      options.items[0].value - value, attr of input (string)
      options.items[0].checked - checked (boolean)

include ../checkbox-button/checkbox-button

mixin checkbox-list(options = {})
  - if (!options.items) options.items = [];

  .checkbox-list.js-checkbox-list(class = options.expanded && 'checkbox-list_expanded')
    .checkbox-list__title !{options.title}
      span.checkbox-list__icon
        i.material-icons expand_more
    ul.checkbox-list__list
      each item in options.items
        li.checkbox-list__item
          +checkbox-button({label: item.label, name: item.name, value: item.value, checked: item.checked})

