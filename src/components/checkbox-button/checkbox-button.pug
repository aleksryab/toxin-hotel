//-
    options.name - name, attr of input (string)
    options.value - value (string)
    options.label - подпись кнопки (string)
    options.bold - жирный текст подписи (boolean)
    options.checked - checked (boolean)
    options.descr - описание с мелким шрифтом (string)

mixin checkbox-button(options = {})
  label.checkbox-button
    input.checkbox-button__input(type = "checkbox", name = options.name, value = options.value, checked = options.checked)
    span.checkbox-button__label(class = options.bold && 'checkbox-button__label_bold') !{options.label}
    if options.descr
      span.checkbox-button__descr !{options.descr}