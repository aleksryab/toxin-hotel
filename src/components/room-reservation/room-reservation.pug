        span.room-reservation__price-digit 9 990&#8381;
        span.room-reservation__price-descr  в сутки
    div.room-reservation__dates
      div.room-reservation__box
        +input({label: 'прибытие', name: 'check-in', placeholder: 'ДД.ММ.ГГГГ', required: true, more: true, date: true})
