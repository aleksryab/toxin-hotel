include ../input/input
include ../button/button
include ../dropdown/dropdown

mixin room-reservation()
  form.room-reservation
    div.room-reservation__header
      div.room-reservation__number
        h2.room-reservation__title
          span.room-reservation__title_smaller &#8470;
          |  888
